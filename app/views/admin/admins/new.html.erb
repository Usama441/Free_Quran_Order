<% content_for :title, "Add New Admin - Quran Admin" %>

<div class="max-w-md mx-auto">
  <div class="bg-white shadow-lg rounded-xl p-8">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-green-700 flex items-center justify-center space-x-2">
        <i class="fas fa-user-plus"></i><span>Add New Admin</span>
      </h2>
      <p class="text-gray-600 mt-2">Create a new administrator account</p>
    </div>

    <%= form_with model: @admin, url: admin_admins_path, class: "space-y-6" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= f.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :first_name, required: true,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent",
              placeholder: "John" %>
          <% if @admin.errors[:first_name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @admin.errors[:first_name].first %></p>
          <% end %>
        </div>
        <div>
          <%= f.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :last_name, required: true,
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent",
              placeholder: "Smith" %>
          <% if @admin.errors[:last_name].any? %>
            <p class="mt-1 text-sm text-red-600"><%= @admin.errors[:last_name].first %></p>
          <% end %>
        </div>
      </div>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, required: true,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "admin@example.com" %>
        <% if @admin.errors[:email].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @admin.errors[:email].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, required: true,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "Enter password" %>
        <% if @admin.errors[:password].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @admin.errors[:password].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password_confirmation, required: true,
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent",
            placeholder: "Confirm password" %>
        <% if @admin.errors[:password_confirmation].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @admin.errors[:password_confirmation].first %></p>
        <% end %>
      </div>

      <div>
        <%= f.label :role, class: "block text-sm font-medium text-gray-700 mb-3" %>
        <div class="space-y-2">
          <div class="flex items-center">
            <%= f.radio_button :role, :manager, checked: true, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300" %>
            <%= f.label :role_manager, raw('<span class="ml-2 text-sm font-medium">Manager</span><br/><span class="ml-6 text-xs text-gray-500">Can manage orders, Qurans, and view analytics</span>'), for: "admin_role_manager" %>
          </div>
          <div class="flex items-center">
            <%= f.radio_button :role, :super_admin, class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300" %>
            <%= f.label :role_super_admin, raw('<span class="ml-2 text-sm font-medium flex items-center"><i class="fas fa-crown text-yellow-500 mr-1"></i>Super Admin</span><br/><span class="ml-6 text-xs text-gray-500">Full system access including user management</span>'), for: "admin_role_super_admin" %>
          </div>
        </div>
        <% if @admin.errors[:role].any? %>
          <p class="mt-1 text-sm text-red-600"><%= @admin.errors[:role].first %></p>
        <% end %>
      </div>

      <div class="flex space-x-4">
        <%= link_to admin_admins_path, class: "flex-1 bg-gray-500 text-white px-4 py-2 rounded-lg hover:bg-gray-600 transition text-center flex items-center justify-center space-x-2" do %>
          <i class="fas fa-times"></i><span>Cancel</span>
        <% end %>
        <%= f.submit "Create Admin", class: "flex-1 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition flex items-center justify-center space-x-2" %>
      </div>
    <% end %>
  </div>

  <!-- Security Notice -->
  <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mt-6 rounded">
    <div class="flex items-center">
      <i class="fas fa-exclamation-triangle text-yellow-400 mr-2"></i>
      <div>
        <p class="text-sm text-yellow-800">
          <strong>Security Notice:</strong> The created admin will receive their login credentials via email and should change their password upon first login.
        </p>
      </div>
    </div>
  </div>
</div>
