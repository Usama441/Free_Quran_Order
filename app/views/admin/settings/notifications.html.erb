       <!-- Recent Activity (Read-only inside form) -->
    <div class="bg-white shadow-lg rounded-xl p-6 border border-gray-200">
      <div class="flex justify-between items-center mb-4">
        <h3 class="text-xl font-semibold text-gray-700 flex items-center space-x-2">
          <i class="fas fa-history"></i>
          <span>Recent Notification Activity</span>
        </h3>
        <% if @recent_activities.any? %>
          <span class="text-sm text-gray-500 bg-gray-100 px-3 py-1 rounded-full">Clear history button below</span>
        <% end %>
      </div>

      <div class="space-y-3 max-h-64 overflow-y-auto">
        <% if @recent_activities.any? %>
          <% @recent_activities.each do |activity| %>
            <div class="flex justify-between items-center p-3 <%= activity.color_class %> rounded-lg border">
              <div class="flex items-center space-x-3">
                <i class="<%= activity.icon_class %> text-lg"></i>
                <div>
                  <div class="font-medium text-sm"><%= activity.title %></div>
                  <div class="text-xs opacity-75"><%= activity.message %></div>
                  <% if activity.sent_to.present? %>
                    <div class="text-xs opacity-60">Sent via: <%= activity.sent_to %></div>
                  <% end %>
                </div>
              </div>
              <div class="text-xs opacity-75 whitespace-nowrap"><%= activity.time_ago %></div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8 text-gray-500">
            <i class="fas fa-bell-slash text-3xl mb-2 opacity-50"></i>
            <p>No notification activity yet</p>
            <p class="text-sm">Notifications will appear here when they are sent</p>
          </div>
        <% end %>
      </div>

      <% if @recent_activities.any? %>
        <div class="mt-4 text-center">
          <p class="text-sm text-gray-600">
            Showing <%= @recent_activities.count %> most recent activities
            <% total_count = NotificationActivity.count %>
            <% if total_count > @recent_activities.count %>
              (of <%= total_count %> total)
            <% end %>
          </p>
        </div>
      <% end %>
    </div>
<!-- Save Button -->
    <div class="flex justify-end mt-6">
      <button type="submit" class="bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 transition-all duration-300 flex items-center space-x-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
        <i class="fas fa-save"></i>
        <span>Save Notification Settings</span>
      </button>
    </div>
  <% end %>

  <!-- Clear History Button (Outside the form) -->
  <% if @recent_activities.any? %>
    <div class="flex justify-end">
      <%= button_to admin_clear_notification_history_path, 
        method: :delete, 
        data: { confirm: 'Are you sure you want to clear all notification history? This action cannot be undone.' },
        class: "bg-gray-600 text-white px-6 py-3 rounded-lg hover:bg-gray-700 transition-all duration-300 flex items-center space-x-2 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" do %>
        <i class="fas fa-trash"></i>
        <span>Clear Notification History</span>
      <% end %>
    </div>
  <% end %>
      </div>
    </div>
</div>


<% content_for :page_scripts do %>
<script>
  // Auto-hide flash messages after 5 seconds
  document.addEventListener('DOMContentLoaded', function() {
    // Add smooth scrolling for better UX
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });
  });
</script>
<% end %>