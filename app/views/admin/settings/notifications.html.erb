            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[enable_discord_notifications]" <%= @notification_settings['enable_discord_notifications'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
            </label>
          </div>
