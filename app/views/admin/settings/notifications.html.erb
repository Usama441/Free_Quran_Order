<% content_for :title, "Notifications - Quran Admin" %>

    <h2 class="text-3xl font-bold text-green-700 mb-6 flex items-center space-x-2">
      <i class="fas fa-envelope"></i><span>Notification Settings</span>
    </h2>

    <%= form_with url: admin_notifications_path, method: :patch, class: "space-y-8" do |f| %>
      <!-- Order Notifications -->
      <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-xl font-semibold text-green-700 mb-4 flex items-center space-x-2">
          <i class="fas fa-shopping-cart"></i><span>Order Notifications</span>
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-800">New Order Alerts</h4>
              <p class="text-sm text-gray-600">Receive notifications when new orders are placed</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[email_on_new_order]" <%= @notification_settings['email_on_new_order'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
            </label>
          </div>

          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-800">Daily Order Summary</h4>
              <p class="text-sm text-gray-600">Get daily summary of orders at 9 AM</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[email_daily_summary]" <%= @notification_settings['email_daily_summary'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
            </label>
          </div>

          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-800">Weekly Reports</h4>
              <p class="text-sm text-gray-600">Weekly performance reports every Monday</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[email_weekly_report]" <%= @notification_settings['email_weekly_report'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
            </label>
          </div>
        </div>
      </div>

      <!-- System Notifications -->
      <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-xl font-semibold text-blue-700 mb-4 flex items-center space-x-2">
          <i class="fas fa-server"></i><span>System Notifications</span>
        </h3>
        <div class="space-y-4">
          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-800">Low Stock Alerts</h4>
              <p class="text-sm text-gray-600">Get notified when Quran stock falls below threshold</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[sms_alerts_low_stock]" <%= @notification_settings['sms_alerts_low_stock'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
            </label>
          </div>

          <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">
            <div>
              <h4 class="font-medium text-gray-800">Slack Integration</h4>
              <p class="text-sm text-gray-600">Send notifications to Slack channel</p>
            </div>
            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[slack_notifications]" <%= @notification_settings['slack_notifications'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
            </label>
          </div>
        </div>
      </div>

      <!-- Integration Settings -->
      <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-xl font-semibold text-purple-700 mb-4 flex items-center space-x-2">
          <i class="fas fa-plug"></i><span>Integration Settings</span>
        </h3>
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Webhook URL</label>
            <input type="url" name="notification[webhook_url]" value="<%= @notification_settings['webhook_url'] %>" placeholder="https://hooks.slack.com/..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
            <p class="text-xs text-gray-500 mt-1">URL for external webhook notifications</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Notification Email Addresses</label>
            <input type="text" name="notification[notification_emails]" value="<%= @notification_settings['notification_emails'] %>" placeholder="admin@example.com, manager@example.com" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500">
            <p class="text-xs text-gray-500 mt-1">Comma-separated list of email addresses</p>
          </div>
        </div>
      </div>

      <!-- Recent Activity -->
      <div class="bg-white shadow-lg rounded-xl p-6">
  <div class="flex justify-between items-center mb-4">
    <h3 class="text-xl font-semibold text-gray-700 flex items-center space-x-2">
      <i class="fas fa-history"></i>
      <span>Recent Notification Activity</span>
    </h3>
    <% if @recent_activities.any? %>
      <%= button_to admin_clear_notification_history_path, 
          method: :delete, 
          data: { confirm: 'Are you sure you want to clear all notification history?' },
          class: "bg-gray-500 text-white px-3 py-1 rounded-lg hover:bg-gray-600 transition text-sm flex items-center space-x-1" do %>
        <i class="fas fa-trash"></i>
        <span>Clear History</span>
      <% end %>
    <% end %>
  </div>
  
  <div class="space-y-3 max-h-64 overflow-y-auto">
    <% if @recent_activities.any? %>
      <% @recent_activities.each do |activity| %>
        <div class="flex justify-between items-center p-3 <%= activity.color_class %> rounded">
          <div class="flex items-center space-x-3">
            <i class="<%= activity.icon_class %>"></i>
            <div>
              <div class="font-medium text-sm"><%= activity.title %></div>
              <div class="text-xs opacity-75"><%= activity.message %></div>
              <% if activity.sent_to.present? %>
                <div class="text-xs opacity-60">Sent via: <%= activity.sent_to %></div>
              <% end %>
            </div>
          </div>
          <div class="text-xs opacity-75"><%= activity.time_ago %></div>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <i class="fas fa-bell-slash text-3xl mb-2"></i>
        <p>No notification activity yet</p>
        <p class="text-sm">Notifications will appear here when they are sent</p>
      </div>
    <% end %>
  </div>
  
  <% if @recent_activities.any? %>
    <div class="mt-4 text-center">
      <p class="text-sm text-gray-600">
        Showing <%= @recent_activities.count %> most recent activities
        <% total_count = NotificationActivity.count %>
        <% if total_count > @recent_activities.count %>
          (of <%= total_count %> total)
        <% end %>
      </p>
    </div>
  <% end %>
</div>

      <!-- Save Button -->
      <div class="flex justify-end mt-4">
        <button type="submit" class="bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition flex items-center space-x-2">
          <i class="fas fa-save"></i>
          <span>Save Notification Settings</span>
        </button>
      </div>
    <% end %>