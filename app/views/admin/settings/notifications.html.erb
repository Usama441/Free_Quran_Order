            <input type="url" name="notification[discord_webhook_url]" value="<%= @notification_settings['discord_webhook_url'] || '' %>" placeholder="https://discord.com/api/webhooks/..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition">
