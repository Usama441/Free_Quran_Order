            <label class="relative inline-flex items-center cursor-pointer">
              <input type="checkbox" name="notification[enable_whatsapp_notifications]" <%= @notification_settings['enable_whatsapp_notifications'] ? 'checked' : '' %> class="sr-only peer">
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-green-300 rounded-full peer peer-checked:after:translate-x-[.75rem] peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-green-600"></div>
            </label>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">WhatsApp Webhook URL</label>
            <input type="url" name="notification[whatsapp_webhook_url]" value="<%= @notification_settings['whatsapp_webhook_url'] || '' %>" placeholder="https://webhook.office.com/..." class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500 focus:border-transparent transition">
            <p class="text-xs text-gray-500 mt-1">URL for WhatsApp Business API or third-party service</p>
          </div>
        </div>

         <!-- General Webhook Settings -->
        <div class="p-4 bg-gray-50 rounded-lg border border-gray-200">
          <h4 class="font-semibold text-gray-800 mb-3 flex items-center space-x-2">
            <i class="fas fa-globe"></i>
