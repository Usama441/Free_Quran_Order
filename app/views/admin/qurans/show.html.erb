<% content_for :title, "#{@quran.title} - Quran Details" %>

<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-gray-900 flex items-center space-x-2">
      <i class="fas fa-book-quran text-green-600"></i>
      <span><%= @quran.title %></span>
    </h2>
    <div class="flex space-x-3">
      <%= link_to edit_admin_quran_path(@quran), class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center space-x-2" do %>
        <i class="fas fa-edit"></i><span>Edit Quran</span>
      <% end %>
      <%= link_to admin_qurans_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition flex items-center space-x-2" do %>
        <i class="fas fa-arrow-left"></i><span>Back to Qurans</span>
      <% end %>
    </div>
  </div>

  <!-- Quran Details Card -->
  <div class="bg-white shadow-lg rounded-xl overflow-hidden">
    <div class="px-6 py-4 bg-gray-50 border-b">
      <h3 class="text-lg font-semibold text-gray-800">Quran Information</h3>
    </div>

    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Basic Information -->
        <div class="space-y-4">
          <div class="bg-gray-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-gray-500 uppercase mb-2">Basic Details</h4>
            <div class="space-y-2">
              <div>
                <span class="text-sm text-gray-600">Title:</span>
                <span class="ml-2 text-gray-900"><%= @quran.title %></span>
              </div>
              <div>
                <span class="text-sm text-gray-600">Writer:</span>
                <span class="ml-2 text-gray-900"><%= @quran.writer %></span>
              </div>
              <div>
                <span class="text-sm text-gray-600">Translation:</span>
                <span class="ml-2 px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 capitalize">
                  <%= @quran.translation %>
                </span>
              </div>
              <div>
                <span class="text-sm text-gray-600">Pages:</span>
                <span class="ml-2 text-gray-900"><%= @quran.pages %></span>
              </div>
            </div>
          </div>

          <!-- Stock Information -->
          <div class="bg-blue-50 p-4 rounded-lg">
            <h4 class="text-sm font-medium text-blue-600 uppercase mb-2">Inventory</h4>
            <div>
              <span class="text-sm text-blue-700">Stock Level:</span>
              <span class="ml-2 px-3 py-1 text-sm font-semibold rounded-full
                <%= @quran.stock < 50 ? 'bg-red-100 text-red-800' :
                    @quran.stock < 100 ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                <%= @quran.stock %> copies
              </span>
            </div>
            <% if @quran.stock < 100 %>
              <div class="mt-2 text-xs text-red-600">
                <i class="fas fa-exclamation-triangle"></i> Low stock alert
              </div>
            <% end %>
          </div>
        </div>

        <!-- Images Section -->
        <div class="space-y-4">
          <% if @quran.images.attached? %>
            <div class="bg-green-50 p-4 rounded-lg">
              <h4 class="text-sm font-medium text-green-600 uppercase mb-2">Images</h4>
              <div class="text-sm text-green-700 mb-3">
                <i class="fas fa-camera"></i> <%= @quran.images.length %> image<%= 's' if @quran.images.length > 1 %>
              </div>
              <div class="grid grid-cols-1 gap-3">
                <% @quran.images.each do |image| %>
                  <div class="bg-white p-3 rounded border">
                    <img src="<%= rails_blob_path(image) %>" alt="<%= @quran.title %>"
                         class="w-full h-32 object-cover rounded">
                  </div>
                <% end %>
              </div>
            </div>
          <% else %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <h4 class="text-sm font-medium text-gray-600 uppercase mb-2">Images</h4>
              <div class="text-sm text-gray-500">
                <i class="fas fa-image"></i> No images uploaded
              </div>
            </div>
          <% end %>

          <!-- Description -->
          <% if @quran.description.present? %>
            <div class="bg-purple-50 p-4 rounded-lg">
              <h4 class="text-sm font-medium text-purple-600 uppercase mb-2">Description</h4>
              <p class="text-sm text-gray-700"><%= @quran.description %></p>
            </div>
          <% else %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <h4 class="text-sm font-medium text-gray-600 uppercase mb-2">Description</h4>
              <p class="text-sm text-gray-500">No description provided</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="mt-8 pt-6 border-t border-gray-200 flex flex-wrap gap-3">
        <%= link_to edit_admin_quran_path(@quran), class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center space-x-2" do %>
          <i class="fas fa-edit"></i><span>Edit Details</span>
        <% end %>

        <%= link_to admin_quran_path(@quran),
            method: :delete,
            data: {
              turbo_confirm: 'Are you sure you want to delete this Quran?',
              turbo_method: :delete,
              turbo_frame: "_top"
            },
            class: "bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition flex items-center space-x-2" do %>
          <i class="fas fa-trash"></i><span>Delete Quran</span>
        <% end %>

        <%= link_to admin_qurans_path, class: "bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition flex items-center space-x-2" do %>
          <i class="fas fa-list"></i><span>All Qurans</span>
        <% end %>
      </div>
    </div>
  </div>
</div>
