<!-- app/views/admin/orders/_orders_table.html.erb -->
<div class="bg-white shadow-lg rounded-xl overflow-hidden" data-controller="orders-table">
  <div class="px-6 py-4 bg-gray-50 border-b flex flex-row items-center justify-between">
    <h3 class="text-lg font-semibold text-gray-800">All Orders</h3>
    <p class="text-sm text-gray-600 mt-1"><%= @orders.count %> total orders</p>
    <!-- items per page--> 
    <div class="flex items-center space-x-2 mr-4">
        <label class="text-sm font-medium text-gray-700">Show:</label>
        <select id="per_page_select" data-orders-management-target="perPageSelect" data-action="change->orders-management#updatePerPage" class="border border-gray-300 rounded-lg px-3 py-2 focus:ring-2 focus:ring-green-500 outline-none">
          <% @per_page_options.each do |option| %>
            <option value="<%= option %>" <%= 'selected' if @per_page == option %>><%= option %></option>
          <% end %>
        </select>
        <label class="text-sm text-gray-600">per page</label>
      </div>
  
  </div>
  <div class="overflow-x-auto">
    <table class="min-w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order ID</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Book Details</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @orders.each do |order| %>
          <tr class="hover:bg-gray-50" id="order-row-<%= order.id %>">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">#<%= order.id %></div>
              <div class="text-sm text-gray-500"><%= order.quantity %> copy</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= order.full_name %></div>
              <div class="text-sm text-gray-500"><%= order.email %></div>
              <div class="text-sm text-gray-500"><%= order.phone %></div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900"><%= order.quran&.title || "Unknown Quran" %></div>
              <div class="text-sm text-gray-500"><%= order.translation&.titleize || "Not specified" %></div>
              <div class="text-sm text-gray-500"><%= order.quran&.pages || 0 %> pages</div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%=
                case order.status
                when 'pending' then 'bg-red-100 text-red-800'
                when 'processing' then 'bg-yellow-100 text-yellow-800'
                when 'shipped' then 'bg-blue-100 text-blue-800'
                when 'delivered' then 'bg-green-100 text-green-800'
                when 'cancelled' then 'bg-red-100 text-red-800'
                else 'bg-gray-100 text-gray-800'
                end
              %>">
                <%= order.status&.titleize || "Unknown" %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
              <%= order.created_at.strftime('%b %d, %Y') %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
              <%= link_to admin_order_path(order), class: "text-blue-600 hover:text-blue-900 mr-4" do %>
                <i class="fas fa-eye"></i> View
              <% end %>
              <div class="inline-flex rounded-md shadow-sm">
                <select data-action="orders-table#updateOrderStatus" data-order-id="<%= order.id %>" class="text-sm border border-gray-300 rounded-md px-2 py-1 focus:ring-2 focus:ring-green-500 outline-none">
                      <option value="<%= order.status %>"><%= order.status&.titleize || order.status || "Unknown" %></option>
                  <option value="pending" <%= 'selected' if order.status == 'pending' %>>Pending</option>
                  <option value="processing" <%= 'selected' if order.status == 'processing' %>>Processing</option>
                  <option value="shipped" <%= 'selected' if order.status == 'shipped' %>>Shipped</option>
                  <option value="delivered" <%= 'selected' if order.status == 'delivered' %>>Delivered</option>
                  <option value="cancelled" <%= 'selected' if order.status == 'cancelled' %>>Cancelled</option>
                </select>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination -->
  <% if @orders.total_pages > 1 %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex items-center justify-between">
      <div class="text-sm text-gray-700">
        Showing <%= (@orders.current_page - 1) * @orders.limit_value + 1 %> to <%= @orders.current_page * @orders.limit_value > @orders.total_count ? @orders.total_count : @orders.current_page * @orders.limit_value %> of <%= @orders.total_count %> entries
      </div>
      <div class="flex items-center space-x-2">
        <%= paginate @orders, param_name: :page, remote: true, params: { per_page: @per_page, search: params[:search], status: params[:status], start_date: params[:start_date], end_date: params[:end_date] } %>
      </div>
    </div>
  <% end %>

  <!-- Empty State -->
  <% if @orders.empty? %>
    <div class="text-center py-12">
      <i class="fas fa-shopping-cart text-gray-400 text-4xl mb-4"></i>
      <h3 class="text-lg font-medium text-gray-900 mb-2">No Orders Found</h3>
      <p class="text-gray-500 mb-4">No orders match your current filters or no orders have been placed yet.</p>
    </div>
  <% end %>
</div>
