<% content_for :title, "Reports - Quran Admin" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-3xl font-bold text-green-700 flex items-center space-x-2">
      <i class="fas fa-chart-bar"></i><span>Reports & Exports</span>
    </h2>
    <%= form_with url: download_csv_admin_reports_path, method: :post, class: "inline-block" do %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center space-x-2">
        <i class="fas fa-download"></i><span>Export Complete CSV</span>
      </button>
    <% end %>
  </div>

  <!-- Report Overview -->
  <div class="grid grid-cols-1 sm:grid-cols-4 gap-6 mb-10">
    <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-green-600">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-gray-500 text-sm">Total Orders</p>
          <h3 class="text-2xl font-bold"><%= @total_orders %></h3>
        </div>
        <i class="fas fa-receipt text-green-600 text-3xl"></i>
      </div>
    </div>
    
    <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-blue-600">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-gray-500 text-sm">Countries Served</p>
          <h3 class="text-2xl font-bold"><%= @countries_reached %></h3>
        </div>
        <i class="fas fa-globe text-blue-600 text-3xl"></i>
      </div>
    </div>
    
    <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-purple-600">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-gray-500 text-sm">Current Stock</p>
          <h3 class="text-2xl font-bold"><%= @current_stock %></h3>
        </div>
        <i class="fas fa-warehouse text-purple-600 text-3xl"></i>
      </div>
    </div>
    
    <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-orange-600">
      <div class="flex justify-between items-center">
        <div>
          <p class="text-gray-500 text-sm">Qurans Distributed</p>
          <h3 class="text-2xl font-bold"><%= @total_qurans_distributed %></h3>
          <p class="text-xs text-gray-500 mt-1">(Delivered orders only)</p>
        </div>
        <i class="fas fa-box-open text-orange-600 text-3xl"></i>
      </div>
    </div>
  </div>

  <!-- Report Generation Forms -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-10">
    <!-- Daily Reports -->
    <div class="bg-white shadow-lg rounded-xl p-6">
      <h3 class="text-xl font-semibold text-blue-700 mb-4 flex items-center space-x-2">
        <i class="fas fa-calendar-day"></i><span>Daily Reports</span>
      </h3>
      <div class="space-y-4 mb-4">
        <% if @reports[:daily].present? %>
          <% @reports[:daily].first(7).each do |date, count| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium text-gray-700"><%= date %></span>
              <span class="font-bold text-blue-600"><%= count %> orders</span>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-4">No daily data available</p>
        <% end %>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <%= link_to "Download PDF", generate_daily_report_admin_reports_path(format: :pdf), class: "bg-blue-600 text-white py-2 px-3 rounded-lg hover:bg-blue-700 transition text-sm text-center" %>
        <%= link_to "Download CSV", generate_daily_report_admin_reports_path(format: :csv), class: "bg-green-600 text-white py-2 px-3 rounded-lg hover:bg-green-700 transition text-sm text-center" %>
      </div>
    </div>

    <!-- Weekly Reports -->
    <div class="bg-white shadow-lg rounded-xl p-6">
      <h3 class="text-xl font-semibold text-green-700 mb-4 flex items-center space-x-2">
        <i class="fas fa-calendar-week"></i><span>Weekly Reports</span>
      </h3>
      <div class="space-y-4 mb-4">
        <% if @reports[:weekly].present? %>
          <% @reports[:weekly].first(4).each do |week, count| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium text-gray-700"><%= week %></span>
              <span class="font-bold text-green-600"><%= count %> orders</span>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-4">No weekly data available</p>
        <% end %>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <%= link_to "Download PDF", generate_weekly_report_admin_reports_path(format: :pdf), class: "bg-blue-600 text-white py-2 px-3 rounded-lg hover:bg-blue-700 transition text-sm text-center" %>
        <%= link_to "Download CSV", generate_weekly_report_admin_reports_path(format: :csv), class: "bg-green-600 text-white py-2 px-3 rounded-lg hover:bg-green-700 transition text-sm text-center" %>
      </div>
    </div>

    <!-- Monthly Reports -->
    <div class="bg-white shadow-lg rounded-xl p-6">
      <h3 class="text-xl font-semibold text-purple-700 mb-4 flex items-center space-x-2">
        <i class="fas fa-calendar-alt"></i><span>Monthly Reports</span>
      </h3>
      <div class="space-y-4 mb-4">
        <% if @reports[:monthly].present? %>
          <% @reports[:monthly].first(6).each do |month, count| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <span class="text-sm font-medium text-gray-700"><%= month %></span>
              <span class="font-bold text-purple-600"><%= count %> orders</span>
            </div>
          <% end %>
        <% else %>
          <p class="text-gray-500 text-center py-4">No monthly data available</p>
        <% end %>
      </div>
      <div class="grid grid-cols-2 gap-2">
        <%= link_to "Download PDF", generate_monthly_report_admin_reports_path(format: :pdf), class: "bg-blue-600 text-white py-2 px-3 rounded-lg hover:bg-blue-700 transition text-sm text-center" %>
        <%= link_to "Download CSV", generate_monthly_report_admin_reports_path(format: :csv), class: "bg-green-600 text-white py-2 px-3 rounded-lg hover:bg-green-700 transition text-sm text-center" %>
      </div>
    </div>
  </div>

  <!-- Custom Report Builder -->
  <div class="bg-white shadow-lg rounded-xl p-6 mb-10">
    <h3 class="text-xl font-semibold text-gray-700 mb-6 flex items-center space-x-2">
      <i class="fas fa-tools"></i><span>Custom Report Builder</span>
    </h3>

    <%= form_with url: generate_custom_report_action_admin_reports_path, method: :post, class: "space-y-6" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
          <input type="date" name="start_date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" value="<%= Date.today.beginning_of_month.strftime('%Y-%m-%d') %>" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
          <input type="date" name="end_date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" value="<%= Date.today.strftime('%Y-%m-%d') %>" required>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Report Type</label>
          <select name="report_type" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
            <option value="orders_summary">Orders Summary</option>
            <option value="customer_analysis">Customer Analysis</option>
            <option value="geographic_distribution">Geographic Distribution</option>
            <option value="inventory_report">Inventory Report</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Format</label>
          <select name="format" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
            <option value="pdf">PDF</option>
            <option value="csv">CSV</option>
          </select>
        </div>
      </div>

      <div class="flex space-x-6">
        <label class="flex items-center">
          <input type="checkbox" name="include_charts" value="1" class="rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200">
          <span class="ml-2 text-sm text-gray-700">Include charts</span>
        </label>
        <label class="flex items-center">
          <input type="checkbox" name="include_raw_data" value="1" checked class="rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200">
          <span class="ml-2 text-sm text-gray-700">Include raw data</span>
        </label>
        <label class="flex items-center">
          <input type="checkbox" name="include_summary" value="1" class="rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200">
          <span class="ml-2 text-sm text-gray-700">Include summary</span>
        </label>
      </div>

      <div class="flex space-x-4">
        <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition">
          <i class="fas fa-play"></i> Generate Report
        </button>
      </div>
    <% end %>
  </div>

  <!-- Export History -->
  <div class="bg-white shadow-lg rounded-xl p-6">
    <h3 class="text-xl font-semibold text-red-700 mb-4 flex items-center space-x-2">
      <i class="fas fa-history"></i><span>Recent Exports</span>
    </h3>
    
    <% if @recent_exports && @recent_exports.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Range</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Format</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Generated</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @recent_exports.each do |export| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= export.report_type.titleize %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= export.start_date %> to <%= export.end_date %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= export.format == 'pdf' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
                    <%= export.format.upcase %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= time_ago_in_words(export.generated_at) %> ago
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium flex justify-end">
                  <% if export.report_type == 'complete_export' %>
                    <%= link_to download_export_admin_reports_path(id: export.id), class: "text-blue-600 hover:text-blue-900 mr-3" do %>
                      <i class="fas fa-download"></i> Download
                    <% end %>
                  <% end %>
                  <%= button_to delete_export_admin_reports_path(id: export.id), 
                              method: :delete, 
                              data: { confirm: 'Are you sure you want to delete this export history?' },
                              class: "text-red-600 hover:text-red-900" do %>
                    <i class="fas fa-trash"></i> Delete
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8 text-gray-500">
        <i class="fas fa-file-export text-4xl mb-4"></i>
        <p>No export history yet.</p>
      </div>
    <% end %>
  </div>
</div>