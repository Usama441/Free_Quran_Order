<% content_for :title, "Reports - Quran Admin" %>

    <div class="flex justify-between items-center mb-6">
      <h2 class="text-3xl font-bold text-green-700 flex items-center space-x-2">
        <i class="fas fa-chart-bar"></i><span>Reports & Exports</span>
      </h2>
      <form method="post" action="<%= admin_reports_path(format: :csv) %>" class="inline-block">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition flex items-center space-x-2">
          <i class="fas fa-download"></i><span>Export CSV</span>
        </button>
      </form>
      <div class="text-sm text-gray-600">Generated reports and exports</div>
    </div>

    <!-- Report Overview -->
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-6 mb-10">
      <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-green-600">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Total Orders</p>
            <h3 class="text-2xl font-bold"><%= @total_qurans_distributed %></h3>
          </div>
          <i class="fas fa-receipt text-green-600 text-3xl"></i>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-blue-600">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Countries Served</p>
            <h3 class="text-2xl font-bold"><%= @countries_reached %></h3>
          </div>
          <i class="fas fa-globe text-blue-600 text-3xl"></i>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-purple-600">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Current Stock</p>
            <h3 class="text-2xl font-bold"><%= @current_stock %></h3>
          </div>
          <i class="fas fa-warehouse text-purple-600 text-3xl"></i>
        </div>
      </div>
      <div class="bg-white shadow-md rounded-xl p-6 border-l-4 border-orange-600">
        <div class="flex justify-between items-center">
          <div>
            <p class="text-gray-500 text-sm">Distributed</p>
            <h3 class="text-2xl font-bold"><%= @total_qurans_distributed %></h3>
          </div>
          <i class="fas fa-box-open text-orange-600 text-3xl"></i>
        </div>
      </div>
    </div>

    <!-- Report Generation Forms -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-10">
      <!-- Daily Reports -->
      <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-xl font-semibold text-blue-700 mb-4 flex items-center space-x-2">
          <i class="fas fa-calendar-day"></i><span>Daily Reports</span>
        </h3>
        <div class="space-y-4">
          <% @reports[:daily].first(7).each_with_index do |(date, count), index| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <div class="flex items-center space-x-3">
                <span class="text-sm font-medium">Day <%= index + 1 %></span>
                <span class="text-xs text-gray-600"><%= date %></span>
              </div>
              <span class="font-bold text-blue-600"><%= count %></span>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <button class="w-full bg-blue-600 text-white py-2 rounded-lg hover:bg-blue-700 transition">
            <i class="fas fa-file-pdf"></i> Generate Daily PDF
          </button>
        </div>
      </div>

      <!-- Weekly Reports -->
      <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-xl font-semibold text-green-700 mb-4 flex items-center space-x-2">
          <i class="fas fa-calendar-week"></i><span>Weekly Reports</span>
        </h3>
        <div class="space-y-4">
          <% @reports[:weekly].first(4).each_with_index do |(week, count), index| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <div class="flex items-center space-x-3">
                <span class="text-sm font-medium">Week <%= index + 1 %></span>
                <span class="text-xs text-gray-600"><%= week %></span>
              </div>
              <span class="font-bold text-green-600"><%= count %></span>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <button class="w-full bg-green-600 text-white py-2 rounded-lg hover:bg-green-700 transition">
            <i class="fas fa-file-excel"></i> Generate Weekly Excel
          </button>
        </div>
      </div>

      <!-- Monthly Reports -->
      <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-xl font-semibold text-purple-700 mb-4 flex items-center space-x-2">
          <i class="fas fa-calendar-alt"></i><span>Monthly Reports</span>
        </h3>
        <div class="space-y-4">
          <% @reports[:monthly].first(3).each_with_index do |(month, count), index| %>
            <div class="flex justify-between items-center p-3 bg-gray-50 rounded">
              <div class="flex items-center space-x-3">
                <span class="text-sm font-medium">Month <%= index + 1 %></span>
                <span class="text-xs text-gray-600"><%= month %></span>
              </div>
              <span class="font-bold text-purple-600"><%= count %></span>
            </div>
          <% end %>
        </div>
        <div class="mt-4">
          <button class="w-full bg-purple-600 text-white py-2 rounded-lg hover:bg-purple-700 transition">
            <i class="fas fa-file-pdf"></i> Generate Monthly PDF
          </button>
        </div>
      </div>
    </div>

    <!-- Custom Report Builder -->
    <div class="bg-white shadow-lg rounded-xl p-6 mb-10">
      <h3 class="text-xl font-semibold text-gray-700 mb-6 flex items-center space-x-2">
        <i class="fas fa-tools"></i><span>Custom Report Builder</span>
      </h3>

      <form class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
          <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" value="<%= Date.today.beginning_of_month %>">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
          <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500" value="<%= Date.today %>">
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Report Type</label>
          <select class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500">
            <option>Orders Summary</option>
            <option>Customer Analysis</option>
            <option>Geographic Distribution</option>
            <option>Inventory Report</option>
          </select>
        </div>
      </form>

      <div class="mt-6 flex space-x-4">
        <label class="flex items-center">
          <input type="checkbox" class="rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200">
          <span class="ml-2 text-sm text-gray-700">Include charts</span>
        </label>
        <label class="flex items-center">
          <input type="checkbox" checked class="rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200">
          <span class="ml-2 text-sm text-gray-700">Include raw data</span>
        </label>
        <label class="flex items-center">
          <input type="checkbox" class="rounded border-gray-300 text-green-600 shadow-sm focus:border-green-300 focus:ring focus:ring-green-200">
          <span class="ml-2 text-sm text-gray-700">Include summary</span>
        </label>
      </div>

      <div class="mt-6 flex space-x-4">
        <button type="button" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition">
          <i class="fas fa-play"></i> Generate Report
        </button>
        <button type="button" class="bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition">
          <i class="fas fa-save"></i> Save as Template
        </button>
      </div>
    </div>

    <!-- Export History -->
    <div class="bg-white shadow-lg rounded-xl p-6">
      <h3 class="text-xl font-semibold text-red-700 mb-4 flex items-center space-x-2">
        <i class="fas fa-history"></i><span>Recent Exports</span>
      </h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Type</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Range</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Format</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Generated</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <!-- Mock export history -->
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Orders Summary</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Oct 1 - Oct 16, 2025</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">CSV</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">2 hours ago</td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <button class="text-blue-600 hover:text-blue-900 mr-3">
                  <i class="fas fa-download"></i> Download
                </button>
                <button class="text-red-600 hover:text-red-900">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </td>
            </tr>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">Customer Analysis</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">Sep 1 - Oct 16, 2025</td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">PDF</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">1 day ago</td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <button class="text-blue-600 hover:text-blue-900 mr-3">
                  <i class="fas fa-download"></i> Download
                </button>
                <button class="text-red-600 hover:text-red-900">
                  <i class="fas fa-trash"></i> Delete
                </button>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>