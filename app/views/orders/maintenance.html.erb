<!-- app/views/orders/maintenance.html.erb -->
<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 text-center">
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-yellow-100 mb-4">
        <i class="fas fa-tools text-yellow-600 text-2xl"></i>
      </div>
      
      <h2 class="text-3xl font-extrabold text-gray-900 mb-4">
        System Maintenance
      </h2>
      
      <p class="text-lg text-gray-600 mb-6">
        <%= site_name %> is currently undergoing scheduled maintenance.
      </p>
      
      <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 mb-6">
        <div class="flex">
          <div class="flex-shrink-0">
            <i class="fas fa-info-circle text-yellow-400"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm text-yellow-700">
              We're working hard to improve your experience. The system will be back online shortly.
            </p>
          </div>
        </div>
      </div>

      <% if debug_mode? %>
        <div class="bg-blue-50 border-l-4 border-blue-400 p-4 mb-6 text-left">
          <div class="flex">
            <div class="flex-shrink-0">
              <i class="fas fa-bug text-blue-400"></i>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-blue-800">Debug Information</p>
              <div class="mt-2 text-sm text-blue-700">
                <p><strong>Maintenance Mode:</strong> Active</p>
                <p><strong>Debug Mode:</strong> Active</p>
                <p><strong>Time:</strong> <%= Time.current.strftime('%Y-%m-%d %H:%M:%S') %></p>
                <p><strong>Today's Orders:</strong> <%= today_orders_count %> / <%= max_daily_orders %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="text-sm text-gray-500">
        <p>Thank you for your patience.</p>
        <p class="mt-2">- The <%= site_name %> Team</p>
      </div>
    </div>
  </div>
</div>