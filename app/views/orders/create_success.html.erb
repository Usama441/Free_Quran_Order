<!-- app/views/orders/create_success.html.erb -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Thank You for Your Order - Free Quran Distribution</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    rel="stylesheet"
    />
</head>
<body class="bg-gray-50 text-gray-800">
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <!-- Success Icon -->
      <div class="mx-auto flex items-center justify-center h-24 w-24 rounded-full bg-green-100 mb-6">
        <i class="fas fa-check-circle text-4xl text-green-600"></i>
      </div>

      <!-- Success Message -->
      <h1 class="text-3xl font-bold text-green-700 mb-4">
        Thank You for Your Order!
      </h1>

      <p class="text-lg text-gray-600 mb-6">
        Insha Allah, we will send you your free Quran copy very soon.
      </p>

      <!-- Islamic Message -->
      <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
        <p class="text-green-800 font-medium">
          "Whoever guides [another] to something good has the reward of one who does it."
        </p>
        <p class="text-sm text-green-600 mt-2">
          - Prophet Muhammad (PBUH)
        </p>
      </div>

      <!-- What's Next Section -->
      <div class="text-left bg-white p-6 rounded-lg shadow-md mb-6">
        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
          <i class="fas fa-clock text-green-600 mr-2"></i>
          What's Next?
        </h3>
        <div class="space-y-3">
          <div class="flex items-start">
            <div class="text-green-600 mr-3 mt-1">
              <i class="fas fa-envelope"></i>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">Email Confirmation</h4>
              <p class="text-sm text-gray-600">You'll receive a confirmation email with order details.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="text-green-600 mr-3 mt-1">
              <i class="fas fa-truck"></i>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">Processing</h4>
              <p class="text-sm text-gray-600">Your order will be processed within 3-5 business days.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="text-green-600 mr-3 mt-1">
              <i class="fas fa-box-open"></i>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">Shipping</h4>
              <p class="text-sm text-gray-600">Free international shipping to your location.</p>
            </div>
          </div>
          <div class="flex items-start">
            <div class="text-green-600 mr-3 mt-1">
              <i class="fas fa-prayer"></i>
            </div>
            <div>
              <h4 class="font-medium text-gray-800">Your Reward</h4>
              <p class="text-sm text-gray-600">You're helping spread the noble message of Islam.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="space-y-4">
        <a href="<%= root_path %>"
           class="w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition">
          <i class="fas fa-home mr-2"></i>
          Return to Home
        </a>

        <a href="<%= new_order_path %>"
           class="w-full flex justify-center py-3 px-4 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition">
          <i class="fas fa-heart mr-2"></i>
          Share with Others
        </a>
      </div>

      <!-- Contact Info -->
      <div class="mt-8 text-sm text-gray-500">
        <p>
          <i class="fas fa-envelope mr-1"></i>
          Questions? Contact us at contact@freequran.org
        </p>
        <p class="mt-2">
          <i class="fas fa-globe mr-1"></i>
          Serving Muslims worldwide since 2025
        </p>
      </div>
    </div>
  </div>
</div>

<!-- Auto-redirect -->
<script>
  // Optional: Auto-redirect after 10 seconds
  setTimeout(function() {
    window.location.href = '<%= root_path %>';
  }, 10000); // 10 seconds
</script>
</body>
</html>
